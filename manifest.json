{
    "name": "Hermidata",
    "author": "BeetleB",
    "description": "Organize your bookmarks more effectively using your google sheets & smart bookmarks.",
    "version": "0.16.16",
    "manifest_version": 3,
    "permissions": [
        "contextMenus",
        "bookmarks",
        "activeTab",
        "identity",
        "storage",
        "tabs",
        "scripting",
        "notifications"
    ],
    "host_permissions": [ "https://*.googleapis.com/*", "*://*/*" ],
    "browser_specific_settings": {
        "gecko": {
            "id": "{8cc11236-9806-4fa0-a3fa-8bf55309a1d0}",
            "strict_min_version": "109.0"
        }
    },
    "oauth2": {
        "client_id": "10068474315-qegara9du372dg55gv3tur6keuegke4n.apps.googleusercontent.com",
        "scopes": ["https://www.googleapis.com/auth/spreadsheets"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"],
        "run_at": "document_idle"
    }],
    "background": {
        "service_worker": "scripts/background.js",
        "scripts": ["scripts/background.js"]
    },
    "action": {
        "default_popup": "pages/popup.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "24": "assets/icon.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "web_accessible_resources": [{
        "resources": [
            "pages/RSSFullpage.html",
            "scripts/RSS.js",
            "styles/*",
            "assets/*"
    ],
        "matches": ["<all_urls>"]
    }],
    "options_page": "pages/settings.html",
    "options_ui": {
        "page": "pages/settings.html",
        "open_in_tab": true
    }
}
